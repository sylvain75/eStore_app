<h2>My cart</h2>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td class=".table-striped"><%= link_to item.product.title, item.product.title %></td>
        <td class=".table-striped"><%= image_tag(item.product.image_url)  %></td>
        <td class=".table-striped"><%= number_to_currency(item.product.price) %></td>
      </tr>
    <% end %>
      <tr>
        <td class="total_td">Total</td>
      </tr>
  </tbody>
</table>
